<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Lista de Productos</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link rel="stylesheet" href="/styles/products.css">
</head>
<body data-userid="{{user._id}}">
    <h1 class="titleCss">Lista de Productos</h1>
    <h2 class="welcomemessage">Bienvenido/a {{user.first_name}} {{user.last_name}}</h2>
    <ul id="productList">
      {{#each products}}
        <form class="product-id" data-id="{{this._id}}" id="addProductToCart_{{this._id}}">
          <li>
            <h2>{{this.title}}</h2>
            <div class="productImg_div">
              <img src="{{this.thumbnails}}" class="product_img" alt="Imagen del producto">
            </div>
            <p>{{this.description}}</p>
            <p>Precio: {{this.price}}</p>
            <p>Código: {{this.code}}</p>
            <p>Stock: {{this.stock}}</p>
            {{!-- <p>Status: {{this.status}}</p> --}}
            {{!-- <p>Categoría: {{this.category}}</p> --}}

            <!-- Botón para ver detalles del producto -->
            <a href="/products/{{this._id}}">Ver Detalles</a>

            <!-- Botón para agregar al carrito directamente -->
            <button type="submit">Agregar al Carrito</button>
          </li>
        </form>
      {{/each}}
    </ul>

    <!-- Incluir el cliente de Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
    <!-- Incluir el script de manejo de productos -->
    <script type="module" src="/js/products.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

</body>
</html>
